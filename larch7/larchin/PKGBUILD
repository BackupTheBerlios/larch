# Maintainer: Michael Towers (larch42 at googlemail dot com)
# 2009.10.24
pkgname=larchin
pkgver=7.0.1
pkgrel=1

pkgdesc="Arch hard disk installer with gui for larch live media"
url="http://larch.berlios.de"
depends=('python')
optdepends=('larchin-syscalls: necessary on the system to be installed'
        'pyqt: for a nice graphical interface, highly recommended')
arch=(any)
license=('GPL')
#install=${pkgname}.install

build() {
  destdir=/opt/larchin
  mkdir -p ${startdir}/pkg${destdir}

  cp -dr ${startdir}/modules ${startdir}/pkg${destdir}
  cp -dr ${startdir}/data ${startdir}/pkg${destdir}
  cp -dr ${startdir}/i18n ${startdir}/pkg${destdir}

  cp ${startdir}/larchin-run ${startdir}/pkg${destdir}
  ln ${destdir}/larchin-run /usr/bin/larchin

  cp -dr ${startdir}/images ${startdir}/pkg${destdir}
  mkdir -p ${startdir}/pkg/usr/share/pixmaps
  ln -s ${destdir}/images/larchin.png ${startdir}/pkg/usr/share/pixmaps

  mkdir -p ${startdir}/pkg/usr/share/applications
  cp ${startdir}/larchin.desktop ${startdir}/pkg/usr/share/applications
}
