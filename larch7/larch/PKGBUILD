# Maintainer: Michael Towers (larch42 at googlemail dot com)
# 2009.08.17
pkgname=larch
pkgver=7.0.14
pkgrel=1

# If I need the architecture, I can get it as ${CARCH}

pkgdesc="Design your own 'live' Archlinux CDs and USB-sticks (etc.)"
url="http://larch.berlios.de"
depends=(pyqt)
arch=(i686 x86_64)
license=('GPL')

build() {
  mkdir -p ${pkgdir}/opt/larch
  for d in buildscripts cd-root data docs i18n modules profiles run; do
    cp -dr ${startdir}/${d} ${pkgdir}/opt/larch
  done
  
  cp -dr ${startdir}/etc ${pkgdir}
  cp ${startdir}/{larchicon.png,larch80.png} ${pkgdir}/opt/larch
  
  mkdir -p ${pkgdir}/usr/share/pixmaps
  cp ${startdir}/larch.png ${pkgdir}/usr/share/pixmaps
  mkdir -p ${pkgdir}/usr/share/applications
  cp ${startdir}/larch.desktop ${pkgdir}/usr/share/applications
}
