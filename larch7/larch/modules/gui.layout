$FORM larch Widget

&Label		title {
	text=_"larch: Arch Linux Live System Toolkit"
	align=center
# Actually it should be big and coloured, etc.
# What about html, or some other markup?
# What about string formatting? (maybe with %1, %2, ..., instead of %s?)
	}

&Notebook	notebook (
	page_settings { text=_"Project Settings" }
	page_installation { text=_"Installation" }
	page_larchify { text=_"Larchify" }
	page_medium { text=_"Prepare Medium" }
	)


# Project Settings Page
&Frame		settings_profile { text=_"Profile" }
  &Label	choose_profile {
	text=_"Choose Existing Profile:"
	align=right
	}
  &Label	new_profile {
	text=_"New Profile:"
	align=right
	}
  &ComboBox	choose_profile_combo
  &Button	profile_browse { text=_"Browse for Profile" }
  &Button	profile_rename { text=_"Rename" }

&OptionalFrame	settings_advanced { text=_"Advanced Options" }
  &Frame	project { text=_"Project" }
  &Label	choose_project { text=_"Choose Existing Project" }
  &ComboBox	choose_project_combo
  &Button	new_project { text=_"New Project" }

  &Label	installation_path { text=_"Installation Path:" }
  &LineEdit	installation_path_show
  &Button	installation_path_change { text=_"Change" }


# Installation Page
&Frame		edit_profile { text=_"Edit Profile" }
  &Button	addedpacks { text=_"Edit 'addedpacks'" }
  &Button	baseveto { text=_"Edit 'baseveto'" }
  &Button	pacmanconf { text=_"Edit pacman.conf template" }

&Frame		pacman_sources { text=_"Pacman Sources" }
  &Label	larch_repo { text=_"larch Repository" }
  &LineEdit	larch_repo_show
  &Button	larch_repo_change { text=_"Change" }
  &Label	mirror { text=_"Arch Mirror" }
  &LineEdit	mirror_show
  &Button	mirror_change { text=_"Change" }

&OptionalFrame	settings_advanced { text=_"Advanced Options" }
  &CheckList	host_db { title=_"Synchronize to host db" }
  
  &Label	cache { text=_"Package Cache" }
  &LineEdit	cache_show
  &Button	cache_change { text=_"Change" }
  &Label	db { text=_"Package db Source" }
  &LineEdit	db_show
  &Button	db_change { text=_"Change" }

  &Button	sync { text=_"Synchronize db" }
  &Button	update { text=_"Update / Add package    [-U]" }
  &Button	add { text=_"Add package(s)    [-S]" }
  &Button	remove { text=_"Add package(s)    [-S]" }

&Button		install { text=_"Install" }


# Larchify Page
#TODO

# Prepare Medium Page
#TODO


################# Layout

# Widget
&VBOX - larch (
	title
	notebook
	)

# Project Settings Page
&VBOX - page_settings (
	settings_profile
	[&VSPACE]
	settings_advanced
	)

&GRID - settings_profile (
	choose_profile	choose_profile_combo	[&VLINE]	profile_rename /
	new_profile	profile_browse		|		.
	)

&HBOX l_installationpath ( installation_path installation_path_show installation_path_change )
&VBOX - settings_advanced (
	project
	l_installationpath
	)

# Installation Page
&VBOX - page_installation (
	edit_profile
	pacman_sources
	settings_advanced
	[&HLINE]
	l_install
	)

&HBOX - edit_profile ( addedpacks baseveto pacmanconf )

&GRID - pacman_sources (
	larch_repo	larch_repo_show	larch_repo_change /
	mirror		mirror_show	mirror_change
	)

&HBOX l_installation_ao settings_advanced ( host_db [&VLINE] l_packages )

&HBOX l_install - ( [&HSPACE] install )

  # l_installation_ao contents
  &VBOX l_packages - (
	l_packages1
	[&HLINE]
	l_packages2
	)

    &GRID l_packages1 - (
	cache	cache_show	cache_change /
	db	db_show		db_change
	)

    &GRID l_packages2 - (
	sync	update /
	add	remove
	)

