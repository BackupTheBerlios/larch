# Contributor: Michael Towers <gradgrind[at]online[dot]de>

pkgname=xkmap
pkgver=3.0
pkgrel=5
pkgdesc="A keymap setter for xorg: a simple graphical front-end for setxkbmap"
license=('GPL')
arch=(any)
depends=('pygtk' 'python-pexpect')
url="http://larch.berlios.de"

build() {
  cd $startdir/pkg
  mkdir -p usr/bin
  mkdir -p usr/share/pixmaps
  mkdir -p usr/share/applications

  cp $startdir/xkmap.py usr/bin
  cp $startdir/xkmap-set usr/bin
  cp $startdir/xkmap.png usr/share/pixmaps
  cp $startdir/xkmap.desktop usr/share/applications
}
