# Maintainer: Michael Towers (larch42 at googlemail dot com)
# 2009.11.08
pkgname=quip
pkgver=1.0.0
pkgrel=1
_pylib=/usr/lib/python2.6/site-packages

pkgdesc="A simple gui program with text/json(stdio) based API, pyqt version"
url="http://larch.berlios.de"
depends=(pyqt)
provides=(uip)
arch=(any)
license=('GPL')
install=quip.install

build() {
  mkdir -p ${pkgdir}/usr/bin
  cp ${startdir}/quip.py ${pkgdir}/usr/bin
  mkdir -p ${pkgdir}${_pylib}
  cp ${startdir}/uipi.py ${pkgdir}${_pylib}
  sed "s|^_pylib=.*|_pylib=${_pylib}|" -i ${startdir}/quip.install
}
