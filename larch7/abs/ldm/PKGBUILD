#2009.11.20
pkgname=ldm
pkgver=1.1
pkgrel=1
pkgdesc="Larch Display Manager (for logging into xorg sessions)"
license=('GPL')
arch=(any)
depends=('pyqt')
backup=(etc/ldm.conf)
url="http://larch.berlios.de"
install=ldm.install

build() {
  _destdir=opt/apps/ldm
  cd $pkgdir
  mkdir -p usr/sbin
  mkdir -p usr/bin
  mkdir -p etc/rc.d
  mkdir -p $_destdir

  cp $startdir/ldmd.py $pkgdir/$_destdir
  ln -s /$_destdir/ldmd.py $pkgdir/usr/sbin/ldmd
  cp $startdir/ldm_new_session.py $pkgdir/$_destdir
  ln -s /$_destdir/ldm_new_session.py $pkgdir/usr/bin/ldm_new_session

  cp $startdir/ldm.py $pkgdir/$_destdir
  cp $startdir/ldmgui.py $pkgdir/$_destdir

  cp $startdir/archlogo.png $pkgdir/$_destdir
  cp $startdir/README $pkgdir/$_destdir

  cp $startdir/ldm.conf $pkgdir/etc
  cp $startdir/ldm.rc $pkgdir/etc/rc.d/ldm
}
